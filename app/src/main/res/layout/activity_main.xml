<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC1C2B"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="30sp"
        android:background="@drawable/ic_rectangle_1"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:padding="20dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/tvdis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masai school ia a 21st Century coding school that cares about you!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@+id/tvwelcome"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />
    <ImageView
        android:id="@+id/ivimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/masai_homepage_icon1"
        android:layout_below="@+id/tvdis"
        android:background="@drawable/ic_rectangle_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btnsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="@drawable/ic_rectangle_1__3_"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/ivimage"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btnsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textColor="@color/white"
        android:background="@drawable/ic_rectangle_1__2_"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/btnsignin"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>




</RelativeLayout>